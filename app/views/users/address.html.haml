%main.address
  %section.address-container
    %h2.address-head
      発送元・お届け先住所入力
    %form.address-inner
      .address-box
        .form-group
          %label.form-group__name お名前
          %span.form-group__label 必須
          %input.form-group__form{:placeholder => "例）山田", :type => "text"}/
          %input.form-group__form{:placeholder => "例）太郎", :type => "text"}/
        .form-group
          %label.form-group__name お名前カナ
          %span.form-group__label 必須
          %input.form-group__form{:placeholder => "例）ヤマダ", :type => "text"}/
          %input.form-group__form{:placeholder => "例）タロウ", :type => "text"}/
        .form-group
          %label.form-group__name 郵便番号
          %span.form-group__label 必須
          %input.form-group__form{:placeholder => "例）123-4567", :type => "text"}/
        .form-group
          %label.form-group__name 都道府県
          %span.form-group__label 必須
          .select-wrap
            %select.select-default
              %option 北海道
              %option 青森県
              %option 岩手県
              %option 宮城県
