- breadcrumb :identity

.main
  .mypage-main
    .mypage-main__right
      %main.address
        %section.address-container
          %h2.address-head
            本人情報の登録
          = form_with url: address_info_keep_path, class: "address-inner" do |f|
            .address-box
              .form-group
                =f.label :お名前 ,class:"form-group__name"
                %br/
                - @user.each do |user|
                  = user.last_name
                  = user.first_name
                  %br/
              .form-group
                =f.label :お名前カナ ,class:"form-group__name"
                %br/
                - @user.each do |user|
                  = user.last_name_kana
                  = user.first_name_kana
                  %br/
              .form-group
                =f.label :生年月日 ,class:"form-group__name"
                %br/
                - @user.each do |user|
                  = user.birth_year
                  = user.birth_month
                  = user.birth_day
                  %br/
              .form-group
                =f.label :郵便番号 ,class:"form-group__name"
                %span.form-group__free 任意
                =f.text_field :postal_code, placeholder: "例）123-4567", class:"form-group__form"
                .err_postal_code
              .form-group
                =f.label :都道府県, class:"form-group__name"
                %span.form-group__free 任意
                .select-wrap
                  %select{name: "prefecture",class:"select-default"}
                    %option 北海道
                    %option 青森県
                    %option 岩手県
                    %option 宮城県
                    %option 秋田県
                    %option 山形県
                    %option 福島県
                    %option 茨城県
                    %option 栃木県
                    %option 群馬県
                    %option 埼玉県
                    %option 千葉県
                    %option 東京都
                    %option 神奈川県
                    %option 新潟県
                    %option 富山県
                    %option 石川県
                    %option 福井県
                    %option 山梨県
                    %option 長野県
                    %option 岐阜県
                    %option 静岡県
                    %option 愛知県
                    %option 三重県
                    %option 滋賀県
                    %option 京都府
                    %option 大阪府
                    %option 兵庫県
                    %option 奈良県
                    %option 和歌山県
                    %option 鳥取県
                    %option 島根県
                    %option 岡山県
                    %option 広島県
                    %option 山口県
                    %option 徳島県
                    %option 香川県
                    %option 愛媛県
                    %option 高知県
                    %option 福岡県
                    %option 佐賀県
                    %option 長崎県
                    %option 熊本県
                    %option 大分県
                    %option 宮崎県
                    %option 鹿児島県
                    %option 沖縄県
                    %option 未定
                  %i.fas.fa-angle-down
              .form-group
                =f.label :市町村 ,class:"form-group__name"
                %span.form-group__free 任意
                =f.text_field :municipalities, placeholder: "例）横浜市緑区", class:"form-group__form"
                .err_municipalities
              .form-group
                =f.label :番地 ,class:"form-group__name"
                %span.form-group__free 任意
                =f.text_field :address_number, placeholder: "例）青山1-1-1", class:"form-group__form"
                .err_address_number
              .form-group
                =f.label :建物名 ,class:"form-group__name"
                %span.form-group__free 任意
                =f.text_field :building, placeholder: "例）柳ビル103", class:"form-group__form"
              %section.sets-add-card
                .card-main__content
                  = link_to "users",class:"btn-red" do
                    %span 登録する

    = render partial: 'shared/sidebar'
