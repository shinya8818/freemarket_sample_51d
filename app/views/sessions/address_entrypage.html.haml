.form-address-entrypage
  = render 'sessions/signup-header'
  
%main.address
  %section.address-container
    %h2.address-head
      発送元・お届け先住所入力
    = form_with url: address_info_keep_path, class: "address-inner" do |f|
      .address-box
        .form-group
          =f.label :お名前 ,class:"form-group__name"
          %span.form-group__label 必須
          =f.text_field :addr_last_name, placeholder: "例）山田", class:"form-group__form"
          =f.text_field :addr_first_name, placeholder: "例）太郎", class:"form-group__form"
          -# エラーメッセージ表示
          .err_last_name
          .err_first_name
        .form-group
          =f.label :お名前カナ ,class:"form-group__name"
          %span.form-group__label 必須
          =f.text_field :addr_last_name_kana, placeholder: "例）ヤマダ", class:"form-group__form"
          =f.text_field :addr_first_name_kana, placeholder: "例）タロウ", class:"form-group__form"
          -# エラーメッセージ表示
          .err_last_name_kana
          .err_first_name_kana
        .form-group
          =f.label :郵便番号 ,class:"form-group__name"
          %span.form-group__label 必須
          =f.text_field :postal_code, placeholder: "例）123-4567", class:"form-group__form"
          -# エラーメッセージ表示
          .err_postal_code
        .form-group
          =f.label :都道府県, class:"form-group__name"
          %span.form-group__label 必須
          .select-wrap
            %select{name: "prefecture",class:"select-default"}
              %option 北海道
              %option 青森県
              %option 岩手県
              %option 宮城県
              %option 秋田県
              %option 山形県
              %option 福島県
              %option 茨城県
              %option 栃木県
              %option 群馬県
              %option 埼玉県
              %option 千葉県
              %option 東京都
              %option 神奈川県
              %option 新潟県
              %option 富山県
              %option 石川県
              %option 福井県
              %option 山梨県
              %option 長野県
              %option 岐阜県
              %option 静岡県
              %option 愛知県
              %option 三重県
              %option 滋賀県
              %option 京都府
              %option 大阪府
              %option 兵庫県
              %option 奈良県
              %option 和歌山県
              %option 鳥取県
              %option 島根県
              %option 岡山県
              %option 広島県
              %option 山口県
              %option 徳島県
              %option 香川県
              %option 愛媛県
              %option 高知県
              %option 福岡県
              %option 佐賀県
              %option 長崎県
              %option 熊本県
              %option 大分県
              %option 宮崎県
              %option 鹿児島県
              %option 沖縄県
              %option 未定
            %i.fas.fa-angle-down
        .form-group
          =f.label :市町村 ,class:"form-group__name"
          %span.form-group__label 必須
          =f.text_field :municipalities, placeholder: "例）横浜市緑区", class:"form-group__form"
          -# エラーメッセージ表示
          .err_municipalities
        .form-group
          =f.label :番地 ,class:"form-group__name"
          %span.form-group__label 必須
          =f.text_field :address_number, placeholder: "例）青山1-1-1", class:"form-group__form"
          -# エラーメッセージ表示
          .err_address_number
        .form-group
          =f.label :建物名 ,class:"form-group__name"
          %span.form-group__free 任意
          =f.text_field :building, placeholder: "例）柳ビル103", class:"form-group__form"
        .form-group
          =f.label :電話番号 ,class:"form-group__name"
          %span.form-group__free 任意
          =f.text_field :addr_cell_phone, placeholder: "例）09012345678", class:"form-group__form"
        %button.address-btn{type: "submit"} 次へ進む
= render './shared/common-footer';
