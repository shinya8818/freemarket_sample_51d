            .profile__main
              = image_tag '/mercari.icon.png',class:'icon'
              %input.profile-name{value: "#{@user.nickname}", type: "text", name:"nickname"}/
            .profile__content
              %textarea.profile-introduction{placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪", value: "#{@user.profile}", name:"pforile"}
            .profile__footer
              %button.profile-btn{type: "submit"}  変更する

    = render partial: 'shared/sidebar'
